---
export interface Props {
	post: any;
}

const { post } = Astro.props;
---

<article class="post-preview">
	<a
	style="
	display: flex;
	flex-direction: column;
	align-items: center;
	text-decoration: none;	
	
	"
	href={post.url}>
		<header>
				
			<h1 class="title">{post.frontmatter.title}</h1>
				
				<img
				class="img-blog"
				src={post.frontmatter.heroImage}
				alt="img-preview"
				/>	
				
			
		</header>
		<p
			style="
			
			border-radius: 10px;
			text-align: center;
			color: white;
			"
		>{post.frontmatter.description}</p>
	</a>
</article>

<style>
	.content :global(main > * + *) {
		margin-top: 1rem;
	}

	.post-preview {
		background-color: #4E8E7C;
		margin-bottom: 2rem;
		border: 1px solid #689C6A;
		box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
		border-radius: 10px;
		transition : 1066ms;
	
		
	}
	
	.post-preview:hover {
		transition : 1066ms;
		
		background-color: #689C6A;
		
		border: solid 1.5px #82AA58;
	}

	header {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.title,
	.author,
	.publish-date {
		margin: 0;
	}

	.publish-date,
	.author {
		font-size: 0.8rem;
	text-decoration: none;	

		
	}

	.title {
		font-size: 1.8rem;
		padding-bottom: 5px;
		
		
		
	}

	.img-blog {
		width: 350px;
		border-radius: 15px;
		
		
	}

</style>
